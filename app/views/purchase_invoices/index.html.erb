

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="pb-5 border-b border-gray-200 flex justify-between items-center">
    <h1 class="font-bold text-4xl">Purchase invoices</h1>
    <%= link_to 'New purchase invoice', new_purchase_invoice_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

<div class="bg-white shadow overflow-hidden sm:rounded-md">
  <ul role="list" id="purchase_invoices" class="divide-y divide-gray-200">
    <li>
      <div class="grid grid-cols-6 divide-x">
        <p class="text-sm font-medium text-grey-900 truncate">Issued on</p>
        <p class="text-sm font-medium text-grey-900 truncate">Supplier</p>
        <p class="text-sm font-medium text-grey-900 truncate">Reference</p>
        <p class="text-sm font-medium text-grey-900 truncate">Amount</p>
      </div>
    </li>
    <%= render @purchase_invoices %>
  </ul>
</div>
</div>
