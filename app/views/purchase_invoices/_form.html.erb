<%= form_with(model: purchase_invoice, class: "contents", data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper' }) do |form| %>
  <% if purchase_invoice.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(purchase_invoice.errors.count, "error") %> prohibited this purchase_invoice from being saved:</h2>

      <ul>
        <% purchase_invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="purchase-invoice-form">
    <div class="my-6">
      <%= form.label :issued_on, class: "label" %>
      <%= form.date_field :issued_on, class: "input", data: { 'purchase-invoice-form-target' => 'issuedOn', action: 'purchase-invoice-form#focusOnSupplier' } %>
    </div>

    <div class="my-6 relative" id="invoice_supplier" data-controller="autocomplete" data-autocomplete-url-value="/suppliers/search" role="combobox">
      <%= form.label :supplier, class: "label" %>
      <div id="supplier">
        <%= form.text_field :supplier_name, class: "input", data: { 'autocomplete-target' => 'input', 'purchase-invoice-form-target' => 'supplier' } %>
      </div>
      <ul class="list-group absolute z-10 mt-1 max-h-60 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm" id="options" data-autocomplete-target="results" style="max-height: 10rem; overflow-y: scroll;"></ul>
      <%= link_to "New supplier", new_supplier_path(target: 'supplier', model: 'purchase_invoice'), data: { turbo_frame: 'modal' }, class: "link text-sm inline-block mt-2" %> 
    </div>

    <div class="my-6 w-1/3 relative" id="currency" data-controller="autocomplete" data-autocomplete-url-value="/currencies/search" role="combobox">
      <%= form.label :currency, class: "label" %>
      <div id="currency_input">
        <%= form.text_field :currency, class: "input", data: { 'autocomplete-target' => 'input', 'purchase-invoice-form-target' => 'currency' } %>
      </div>
      <ul class="list-group absolute z-10 mt-1 max-h-60 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm" id="options" data-autocomplete-target="results" style="max-height: 10rem; overflow-y: scroll;"></ul>
    </div>

    <div class="my-6 relative" id="account" data-controller="autocomplete" data-autocomplete-url-value="/accounts/search" role="combobox">
      <%= form.label :payment_account_number, class: "label" %>
      <div id="payment_account">
        <%= form.text_field :payment_account_number, value: "#{@account.number} #{@account.label}", class: "input", data: { 'autocomplete-target' => 'input', 'purchase-invoice-form-target' => 'account' } %>
      </div>
      <ul class="list-group absolute z-10 mt-1 max-h-60 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm" id="options" data-autocomplete-target="results" style="max-height: 10rem; overflow-y: scroll;"></ul>
      <%= link_to "New account", new_account_path(target: 'payment_account', model: 'purchase_invoice'), data: { turbo_frame: 'modal' }, class: "link text-sm inline-block mt-2" %>
    </div>

    <div class="my-6">
      <%= form.label :paid_on, class: "label" %>
      <%= form.date_field :paid_on, class: "input", data: { 'purchase-invoice-form-target' => 'paidOn', action: 'focus->purchase-invoice-form#prefillPaidOn keydown.tab->purchase-invoice-form#focusOnReference' } %>
    </div>

    <div class="my-6">
      <%= form.label :reference, class: "label" %>
      <%= form.text_field :reference, class: "input", data: { 'purchase-invoice-form-target' => 'reference' } %>
    </div>

    <div class="py-6 border-t border-gray-200">
      <h2 class="font-bold text-2xl text-gray-800">Purchase Invoice lines</h2>
      <!-- Nested lines form -->
      <!-- Template for new line -->
      <template data-nested-form-target="template">
        <%= form.fields_for :lines, PurchaseInvoiceLine.new, child_index: 'NEW_RECORD' do |line_fields| %>
          <%= render "line_form", form: line_fields %>
        <% end %>
      </template>

      <!-- Existing lines -->
      <%= form.fields_for :lines do |line_fields| %>
        <%= render "line_form", form: line_fields %>
      <% end %>

      <!-- Target for new line insertion -->
      <div data-nested-form-target="target"></div>

      <div class="mt-6">
        <button type="button" data-action="nested-form#add" class="btn-primary btn-small inline-flex items-center gap-x-1.5">
          <%= heroicon "plus", options: { class: "h-5 w-5 -ml-0.5" } %>
          Add Line
        </button>
      </div>
    </div>

    <%= form.hidden_field :document_id %>

    <div class="border-t border-gray-200 flex justify-between items-center">
      <%= form.submit class: "btn-primary mt-6" %>
      <%= link_to 'Back to purchase invoices', purchase_invoices_path, class: "link mt-6" %>
    </div>
  </div>
<% end %>