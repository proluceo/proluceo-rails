<div id="<%= dom_id ledger_entry %>" class="ledger-entries-table ledger-entry-line min-w-full text-sm group hover:bg-gray-50">
  <div class="flex justify-start items-center row-span-<%= ledger_entry.parts.count %>"><%= ledger_entry.value_on %></div>
  <div class="flex justify-start items-center row-span-<%= ledger_entry.parts.count %>"><%= ledger_entry.label %></div>
  <% ledger_entry.parts.each do |part| %>
    <div class="flex justify-start items-center"><%= part.account_number %><span class="ml-2"><%= part.account.label %></span></div>
    <div class="flex justify-end items-center font-medium"><%= part.debit? ? number_with_precision(part.amount, precision: 2) : "" %></div>
    <div class="flex justify-end items-center font-medium"><%= part.credit? ? number_with_precision(part.amount, precision: 2) : "" %></div>
  <% end %>
</div>


