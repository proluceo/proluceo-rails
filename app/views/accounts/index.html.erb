<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="pb-5 border-b border-gray-200 flex justify-between items-center">
    <h1 class="heading-1">Accounts</h1>
    <%= link_to 'New account', new_account_path, class: "btn-primary" %>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
        <div id="accounts" class="min-w-full">
          <div class="table min-w-full bg-gray-50 text-sm font-semibold">
            <div>Company</div>
            <div>Number</div>
            <div>Label</div>
            <div><span class="sr-only">Edit</span></div>
          </div> 
         <div class="bg-white">
            <%= render @accounts %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
